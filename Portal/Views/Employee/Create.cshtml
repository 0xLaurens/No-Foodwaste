@using Domain
@model PackageViewModel 

@{
    ViewBag.Title = "Create package";
}

<h2>Pakket aanmaken</h2>
<form asp-action="Create" method="post">
    <div class="form-outline required mb-4">
        <label asp-for="Package.Name">Naam van het pakket</label>
        <div>
            <span asp-validation-for="Package.Name" class="text-danger"></span>
        </div>
        <input asp-for="Package.Name" class="form-control"/>
    </div>

    <div class="form-outline required mb-4">
        <label asp-for="Package.Price">Prijs</label>
        <div>
            <span asp-validation-for="Package.Price" class="text-danger"></span>
        </div>
        <input asp-for="Package.Price" class="form-control"/>
    </div>

    <div class="form-outline required mb-4">
        <label asp-for="Package.Category">Categorie</label>
        <div>
            <span asp-validation-for="Package.Category" class="text-danger"></span>
        </div>
        <select asp-for="Package.Category" asp-items="Html.GetEnumSelectList<Category>()">
            <option selected="selected">Kies een categorie</option>
        </select>
    </div>


    <div class="form-checkform-outline required mb-4">
        <label asp-for="OptionsList">Producten:</label>
        
        @foreach (var p in Model.OptionsList)
        {
            <div class="form-check">
                <input class="form-check-input" name="ProductsList" type="checkbox" value="@p.Value.ProductId" id="@p.Value.ProductId" checked="@p.IsChecked" >
                <label class="form-check-label" for="@p.Value.ProductId">
                    @p.Value.Name
                </label>
            </div>
        }
    </div>


    <div class="form-outline required mb-4">
        <label asp-for="Package.BestBeforeDate">Ten minste houdbaar tot</label>
        <div>
            <span asp-validation-for="Package.BestBeforeDate" class="text-danger"></span>
        </div>
        <input type="date" asp-for="Package.BestBeforeDate" tooltip="Best before date" class="form-control"/>
    </div>

    <div class="form-outline required mb-4">
        <label asp-for="Package.PickupTime">Ophaaldatum</label>
        <div>
            <span asp-validation-for="Package.PickupTime" class="text-danger"></span>
        </div>
        <input type="date" asp-for="Package.PickupTime" tooltip="Pickup time for the package" class="form-control"/>
    </div>

    <div class="form-outline mb-4">
        <div>
            <span asp-validation-for="Package.EighteenPlus" class="text-danger"></span>
        </div>
        <div class="form-check form-switch">
            <input asp-for="Package.EighteenPlus" class="form-check-input" type="checkbox">
            <label asp-for="Package.EighteenPlus" class="form-check-label">18+</label>
        </div>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-lg btn-block w-100">Aanmaken</button>
</form>