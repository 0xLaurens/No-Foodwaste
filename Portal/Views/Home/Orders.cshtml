@model ICollection<Domain.Package>
@{
    ViewBag.Title = "Orders";
    Layout = "_Layout";
}
<section class="pt-5 pb-2">
    <div class="container py-5">
        <div class="row mb-4 mb-lg-5">
            <div class="col mx-auto">
                <h2 class="fw-bold">My Orders</h2>
            </div>
        </div>
        @if (Model.Count == 0)
            {
                <h4>You don't have any orders yet!</h4> 
                <a asp-action="Index"><h6>Look through the available products</h6></a>
            }
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mx-auto">
            @foreach (var p in Model)
            {
                <div class="col">
                    <div class="card rounded-2">
                        <div class="card-body">
                            <ul>
                                <li>@p.Name</li>
                                <li>@p.CityId</li>
                                <li>@p.Category</li>
                                <li>@p.EighteenPlus</li>
                                <li>@p.Price</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
