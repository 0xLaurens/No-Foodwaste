@model Domain.Package
<div class="col">
    <div class="card rounded-2">
        <a class="text-decoration-none text-black" asp-action="Package" asp-controller="Package" asp-route-id="@Model.PackageId">
            <div class="card-body">
                <h4>@Model.Name</h4>
                @if (Model.Thumbnail != null)
                {
                    <div class="card-img-top vh-100 w-100">
                        <img src="Data:@Model.ThumbnailFormat;base64,@Convert.ToBase64String(Model.Thumbnail!)" alt="Image of @Model.Name"/>
                    </div>
                }
                <ul class="list-unstyled">
                    <li>@Model.City?.Name: @Model.Cafeteria?.Location!.Name</li>
                    <li>@Model.Category</li>
                    <li>@Model.EndTimeSlot</li>
                    @if (Model.EighteenPlus)
                    {
                        <li>18+</li>
                    }
                    <li>â‚¬ @Model.Price</li>
                </ul>
            </div>
        </a>
        @if (Context.Request.Path.Value!.Contains("Employee") && Model.StudentId == null)
        {
            <ul class="list-unstyled">
                <li>
                    <a asp-controller="Employee" asp-action="Update" asp-route-id="@Model.PackageId">Edit</a>
                </li>
                <li>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.PackageId">Delete</a>
                </li>
            </ul>
        }
    </div>
</div>